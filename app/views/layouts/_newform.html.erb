<div class="col-md-3">
<%= image_tag current_user.get_profile_image,size: "100x100" %>
  <table class="table">
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= current_user.last_name %> <%= current_user.farst_name %></td>
      </tr>
      <tr>
        <td>コメント件数: <%= @tweet.tweet_comments.count %></td>
      </tr>
      <tr>
        <th>フォロー</th>
        <th><%= link_to current_user.followings.count, user_followings_path(current_user) %></th>
      </tr>
      <tr>
        <th>フォロワー</th>
        <th><%= link_to current_user.followers.count, user_followers_path(current_user) %></th>
      </tr>
    </tbody>
  </table>

  <!--ユーザー情報変更ボタン-->
  <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

  <!--投稿ページへのリンクボタン-->
  <%= link_to new_tweet_path, class:"btn btn-outline-secondary btn-block" do %>
    <button type="button" class="btn btn-light">Tweet</button>
  <% end %>
</div>
