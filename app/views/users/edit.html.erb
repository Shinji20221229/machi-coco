<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mt-5 offset-md-1">
      <h2><span class="bg-light">プロフィール編集<span></h2>
    </div>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_massages.each do |user| %>
          <li><%= user %></li>
        <% end %>
      </ul>
    <% end %>
    <% from_with model: @user do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "氏名" %><br>
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール編集", accept: "image/*" %><br>
      <%= f.submit class: "btn btn-secondary" %><br>
    <% end %>
  </div>
</div>