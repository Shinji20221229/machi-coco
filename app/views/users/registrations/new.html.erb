<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1 mt-5">
      <h2><span class="bg-light">新規登録</span></h2>
    </div>
    <div class="col-md-8 offset-md-1 mt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <table class="table-borderless">
          <tr>
            <td>名前</td>
            <td>
              <%= f.label :"(姓)" %>
              <%= f.text_field :last_name, autofocus: true, placeholder: "田中" %>
            </td>
            <td>
              <%= f.label :"(名)" %>
              <%= f.text_field :farst_name, autofocus: true, placeholder: "太郎" %>
            </td>
          </tr>

          <tr>
            <td>
              <%= f.label :"メールアドレス" %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "sample@example.com" %>
            </td>
          </tr>

          <tr>
            <td><%= f.label :"パスワード(６文字以上)" %></td>
            <td>
              <%= f.password_field :password %>
            </td>
          </tr>

          <tr>
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td>
              <%= f.password_field :password_confirmation %>
            </td>
          </tr>

          <tr>
            <td class="actions">
              <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
            </td>
          </tr>
        </table>
      <% end %>
      <!--ログイン画面へのリンクボタン-->
      <%= render "devise/shared/links" %>
    </div>


  </div>
</div>