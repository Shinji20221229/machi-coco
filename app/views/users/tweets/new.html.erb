<div class="container">
    <div class="row">
        <div class="col-auto">
          <h2>Tweet</h2>
            <%= form_with model: @tweet do |f| %>
              <h4>画像</h4>
                 <%= f.file_field :image, accept: "image/*" %>
              <h4>場所</h4>
                <%= f.text_area :caption %>
              <%= f.submit 'Tweet' %>
            <% end %>
        </div>
    </div>
</div>
