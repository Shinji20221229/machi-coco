<div class="container p-5">
  <div class="row">
    <!--部分テンプレート-->
    <div class="col-4">
      <h2><span class="bg-light">投稿編集</span></h2>
      <% if @tweet.errors.any? %>
        <%= @tweet.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @tweet.errors.full_messages.each do |tweet| %>
            <li><%= content %></li>
          <% end %>
        </ul>
      <% end %>

        <%= form_with model: @tweet, url: tweet_path(@tweet.id), method: :patch do |f| %>
          <div class="field my-2">
            <%= f.text_field :content %>
          </div>
          <%= f.file_field :tweet_image, accept: "image/*" %>

          <div class="form-group my-2">
            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          </div>
        <% end %>
      <div>
        <%= link_to "戻る", tweet_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>