<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレート-->
    <div class="col-md-8 offset-md-1">
      <h2>投稿編集</h2>
      <% if @tweet.errors.any? %>
        <%= @tweet.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @tweet.errors.full_messages.each do |tweet| %>
            <li><%= content %></li>
          <% end %>
        </ul>
      <% end %>

        <%= form_with model: @tweet, url: tweet_path(@tweet.id), method: :patch do |f| %>
          <div class="field">
            <%= f.text_field :content %>
          </div>
          <%= f.file_field :tweet_image, accept: "image/*" %>

          <div class="form-group">
            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          </div>
        <% end %>
      <%= link_to "投稿詳細", tweet_path(@tweet.id) %>
        ｜
      <%= link_to "戻る", tweet_path %>
    </div>
  </div>
</div>