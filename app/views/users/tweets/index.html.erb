<div class="container px-5 px-sm-0">
  <% if @tweet.errors.any? %>
    <%= @tweet.errors.count %>errors prohivited this obj from being saved:
    <ul>
      <% @tweet.errors.full_messages.each do |tweet| %>
        <li><%= tweet %></li>
      <% end %>
    </ul>
  <% end %>
    <div class="row">
    <!--部分テンプレート-->
    <%#= render 'layouts/newform' %>
      <div class="col-md-8 offset-md-1">
        <h2>Tweets</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>場所</th>
                <th></th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @tweets.each do |tweet| %>
                <tr>
                  <td>
                    <%= link_to user_path(tweet.user) do %>
                    <%= image_tag tweet.user.get_profile_image,size: "100x100" %>
                    <% end %>
                  </td>
                  <td>
                  <%= link_to tweet.content_image, tweet_path(tweet.id) %>
                  </td>
                  <td>
                    <%= tweet.content %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>
