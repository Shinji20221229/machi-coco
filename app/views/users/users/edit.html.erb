<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mt-5 offset-md-1">
      <h2><span class="bg-light">プロフィール編集<span></h2>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <h5><span class="bg-light"><%= f.label :氏名　%></span></h5>
          <%= @user.last_name %> <%= @user.farst_name %>
        </div>
        <div class="form-group">
          <h5><span class="bg-light"><%= f.label :プロフィール画像　%></span></h5>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>