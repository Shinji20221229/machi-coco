<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mt-5 offset-md-1">
      <h2><span class="bg-light">プロフィール編集<span></h2>

      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <h5><span class="bg-light"><%= f.label :氏名　%></span></h5>
          <%= f.text_field :last_name %>
          <%= f.text_field :farst_name %>
        </div>
        <div class="form-group">
          <h5><span class="bg-light"><%= f.label :プロフィール画像　%></span></h5>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: 'btn btn-success btn-sm' %>
        </div>
        <% if user_signed_in? && @user == current_user %>
          <% unless @user.email == "test@example.com" then %>
            <div class="mt-3">
              <%= link_to "退会", user_path(current_user.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に退会しますか？" %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>