<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2><span class="bg-light">Users<span></h2>
        <table class="table">
          <thead>
            <tr>
              <th>写真</th>
              <th>場所</th>
            </tr>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <%= @users.each do |user| %>
              <%= link_to users_path(user.id) do %>
            <% end %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100> %></td>
                <td><%= user.name %></td>
                <td><%= link_to "詳細", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>