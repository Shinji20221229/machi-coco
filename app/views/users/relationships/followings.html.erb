<div class="container p-5">
  <div class="row p-3">
    <!--フォーム部分テンプレート-->
    <%= render 'layouts/newform' %>
    <div class="mx-auto">
      <h2><span class="bg-light">フォロー一覧<span></h2>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <table class="table">
            <thead>
              <th></th>
              <th>氏名</th>
              <th colspan="3"></th>
            </thead>
            <tbody>
              <tr>
                <td><%= image_tag user.get_profile_image,size: "100x100" %></td>
                <td><%= user.last_name %> <%= user.farst_name %></td>
                <td>フォロー数： <%= user.followings.count %></td>
                <td>フォロワー数： <%= user.followers.count %></td>
                <td><%= link_to "詳細", user %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>